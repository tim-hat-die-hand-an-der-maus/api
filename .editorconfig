root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
ij_continuation_indent_size = 4
ij_kotlin_allow_trailing_comma_on_call_site=true
ij_kotlin_allow_trailing_comma=true

[*.{bat,cmd}]
end_of_line = crlf

[*.sql]
indent_size = 2

[*.xml]
indent_size = 2
