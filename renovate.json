{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>tim-hat-die-hand-an-der-maus/renovate-config"
  ],
  "separateMultipleMajor": true,
  "enabled": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "io.quarkus*"
      ],
      "separateMinorPatch": true,
      "separateMultipleMinor": true,
      "automerge": false
    },
    {
      "matchPackageNames": [
        "org.jetbrains.kotlin*"
      ],
      "automerge": false
    }
  ]
}
